<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutActivity">

    <TextView
        android:id="@+id/tv_title_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Application développée par : "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_desc_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Frédéric MOTOT et Matthieu de LAJARTE"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/tv_title_dev"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_title_hebergeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Hébergeur : "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/tv_desc_dev"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_desc_hebergeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Anroid &amp; Co"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/tv_title_hebergeur"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>